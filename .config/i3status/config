general {
        colors = false 
        interval = 5
}

order += "wireless wlan0"
order += "ethernet eth0"
order += "battery 0"
order += "tztime local"

wireless wlan0 {
        format_up = "%essid %quality"
        format_down = "W: down"
}

ethernet eth0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡"
        status_bat = ""
        status_unk = "?"
        status_full = ""
        low_threshold = 10
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}
